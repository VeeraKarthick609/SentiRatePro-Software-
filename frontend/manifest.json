{
    "manifest_version": 3,
    "name": "Sentiment Analysis Extension",
    "version": "1.0",
    "description": "Collect and analyze sentiment from product reviews.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://www.amazon.in/*"],
        "js": ["content.js"]
      }
    ]
  }
  